<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_retroactive_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.luyc.bnd.oaattendnace.activity.RetroactiveDetailsActivity">

    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/left"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:text="补签"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/blue_iii"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView11" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line_ii"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:text="排班名称:"
            style="@style/TextStyle_i"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/shape_matter_flow_rg">

            <Spinner
                android:id="@+id/sp_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line_ii"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type"
            android:text="考勤类型:"
            style="@style/TextStyle_i"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/shape_matter_flow_rg">

            <Spinner
                android:id="@+id/sp_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line_ii"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_how_time"
            android:text="请假时长:"
            style="@style/TextStyle_i" />

        <EditText
            android:id="@+id/et_how_time"
            android:layout_width="70dp"
            android:layout_margin="7dp"
            style="@style/EditTextStyle_ii" />

        <TextView
            android:text="分钟"
            style="@style/TextStyle_i" />

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginBottom="15dp"-->
            <!--android:gravity="bottom"-->
            <!--android:text="(精确到半小时)"-->
            <!--android:textColor="@color/colorAccent"-->
            <!--android:textSize="12sp" />-->
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line_ii"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_discommit"
            android:textColor="@color/blue_iii"
            style="@style/RadioButtonStyle_i"
            android:text="取消" />

        <RadioButton
            android:id="@+id/rb_commit"
            android:textColor="@color/blue_iii"
            style="@style/RadioButtonStyle_i"
            android:text="提交" />

    </RadioGroup>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:text="事项标题:"
            style="@style/TextStyle_i"/>

        <EditText
            android:id="@+id/et_title"
            android:hint="事项标题"
            android:layout_width="match_parent"
            style="@style/EditTextStyle_ii"/>

    </LinearLayout>

    <TextView style="@style/HorizontalStyle_i" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:text="关联流程:"
            style="@style/TextStyle_i" />

        <RelativeLayout
            android:id="@+id/rl_flow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/shape_matter_flow_rg"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_flow"
                style="@style/ImgViewStyle_i"
                android:src="@mipmap/down" />

            <TextView
                android:id="@+id/tv_flow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_flow"
                android:background="@null"
                android:gravity="center"
                android:text="请选择请假类型"
                android:textSize="18sp" />
        </RelativeLayout>


    </LinearLayout>

    <TextView style="@style/HorizontalStyle_i" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:text="请假理由:"
            style="@style/TextStyle_i"/>

        <EditText
            android:id="@+id/et_cause"
            android:hint="请输入请假理由"
            android:layout_width="match_parent"
            style="@style/EditTextStyle_ii" />

    </LinearLayout>

    <TextView style="@style/HorizontalStyle_i" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:text="请假人员:"
            style="@style/TextStyle_i"/>

        <EditText
            android:id="@+id/et_name"
            android:hint="伯乐"
            android:layout_width="match_parent"
            style="@style/EditTextStyle_ii" />
    </LinearLayout>

    <TextView style="@style/HorizontalStyle_i" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:text="请假类型:"
            style="@style/TextStyle_i"/>

        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/shape_matter_flow_rg">

            <Spinner
                android:id="@+id/sp_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="请假"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView style="@style/HorizontalStyle_i" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:text="开始时间:"
            style="@style/TextStyle_i" />

        <RelativeLayout
            android:id="@+id/rl_start_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/shape_matter_flow_rg">

            <ImageView
                android:id="@+id/iv_i"
                style="@style/ImgViewStyle_i"
                android:src="@mipmap/select_time" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_i"
                android:gravity="center"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView style="@style/HorizontalStyle_i" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:text="结束时间:"
            style="@style/TextStyle_i"/>

        <RelativeLayout
            android:id="@+id/rl_end_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/shape_matter_flow_rg">

            <ImageView
                android:id="@+id/iv_ii"
                style="@style/ImgViewStyle_i"
                android:src="@mipmap/select_time" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_toRightOf="@id/iv_ii"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView style="@style/HorizontalStyle_i" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:text="请假时长:"
            style="@style/TextStyle_i" />

        <EditText
            android:id="@+id/et_releas_time"
            android:layout_width="70dp"
            style="@style/EditTextStyle_ii" />

        <TextView
            android:text="小时"
            style="@style/TextStyle_i" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:gravity="bottom"
            android:text="(精确到半小时)"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_ii" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/split_line"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_discommit"
            style="@style/RadioButtonStyle_i"
            android:text="取消" />

        <RadioButton
            android:id="@+id/rb_commit"
            style="@style/RadioButtonStyle_i"
            android:text="提交" />

    </RadioGroup>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_user_center"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_usercenter_bg"
        >
        <ImageView
            android:id="@+id/iv_user_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/male_employees"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:id="@+id/ll_user_number"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/iv_user_img"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="员工编号："
                />
            <TextView
                android:id="@+id/tv_user_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0123456789"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_manager_position"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/shape_all_rg"
            android:layout_below="@+id/ll_user_number"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@mipmap/mydepartment"
                android:padding="2dp"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="研发部经理"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_all_rg"
            android:layout_below="@+id/ll_user_number"
            android:layout_toRightOf="@+id/ll_manager_position"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@mipmap/manger_position"
                android:padding="2dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="软件开发工程师"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView3" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吴工"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</LinearLayout>
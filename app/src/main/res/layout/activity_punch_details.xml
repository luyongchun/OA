<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_punch_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.luyc.bnd.oaattendnace.activity.PunchDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:text="考勤记录" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line_ii" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/time"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="2dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:text="今日打卡2次，工时共计8小时12分钟" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line_ii" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:background="@color/split_line"
        >

        <ImageView
            android:id="@+id/iv_attend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@mipmap/gowork" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_attend"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_attendance_time_i"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="打卡时间 08:10" />

                <TextView
                    android:id="@+id/tv_company_work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="(A上班时间08:30)"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_addressed"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawableLeft="@mipmap/location_i"
                android:gravity="center"
                android:padding="3dp"
                android:singleLine="true"
                android:text="S43广珠西线高速21号"
                android:textColor="@color/gray_ii"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_work_nor_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_attend_nor_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="正常"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_updata_attend_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_matter_bg_iii"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:text="补卡，已通过"
                android:textColor="@color/color_iii"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_img_i"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:background="@color/split_line_ii" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:background="@color/split_line"
        >

        <ImageView
            android:id="@+id/iv_attend_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/after_work_i" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_attend_i"
            android:orientation="vertical"

            android:layout_marginTop="2dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_attendance_time_ii"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="打卡时间 18:10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="(A下班时间17:30)"
                    android:textSize="12sp"
                    android:id="@+id/textView5" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_addressed_i"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:drawableLeft="@mipmap/location_i"
                android:padding="5dp"
                android:singleLine="true"
                android:gravity="center"
                android:text="S43广珠西线高速21号"
                android:textColor="@color/gray_ii"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_work_nor_ii"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_attend_nor_bg"

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="正常"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_updata_attend_ii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/shape_matter_bg_iii"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:text="更新打卡"
                android:textColor="@color/color_iii"
                android:textSize="12sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_img_ii"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />


        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line_ii" />

</LinearLayout>
